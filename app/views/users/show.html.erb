<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div class="user-info">
      <p><%= profile_img(@user) %></p>
      <p><strong>ユーザ名</strong></p>
      <p><%= @user.name %></p>
         <% if @user.id == current_user.id %>
         <% else %>
          <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: 'post'%>
          <%= render 'follow_form', user: @user %>
         <% end %>
    </div>
   </div>
  </div>

   <div class="row">
    <div class="user-followed">
     <div class="wrapper col-md-6 col-sm-10">
      <p>フォロー一覧</p>

  <% @followedusers.each do |followeduser| %>
      <div class="container-child col-md-3 col-sm-4 col-xs-6 ">
        <%= profile_img(followeduser) %>
        <%= link_to user_path(followeduser) do%>
         <p><%= followeduser.name %></p>
        <% end %>
         <% if followeduser.id == current_user.id %>
         <% else %>
          <%= render 'follow_form', user: followeduser %>
         <% end %>
      </div>
  <% end %>

     </div>
    </div>

    <div class="user-follower">
     <div class="wrapper col-md-6 col-sm-10">
      <p>フォロワー一覧</p>

  <% @followerusers.each do |followeruser| %>
      <div class="container-child col-md-3 col-sm-4 col-xs-6 ">
        <%= profile_img(followeruser) %>
        <%= link_to user_path(followeruser) do%>
         <p><%= followeruser.name %></p>
        <% end %>
         <% if followeruser.id == current_user.id %>
         <% else %>
          <%= render 'follow_form', user: followeruser %>
         <% end %>
      </div>
  <% end %>

     </div>
    </div>
   </div>

<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <P><%= link_to '戻る', users_path %></P>
  </div>
</div>
